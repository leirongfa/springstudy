<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--引入外部配置文件-->
    <properties resource="db.properties">
    <property name="username" value="root"/><!-- 可以在内部写也可以在外部引用，优先级是外部引用的高-->
    </properties>
    <!--可以给实体类写别名-->
    <typeAliases>
      <!--  <typeAlias type="com.lei.pojo.User" alias="User"></typeAlias>-->
        <package name="com.lei.pojo"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
<!--        <mapper resource="com/lei/dao/UserMapper.xml"/>-->
      <package name="com.lei.dao"/>
        <!--
        <mapper class="UserMapper"></mapper>-->
    </mappers>
</configuration>